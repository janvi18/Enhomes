<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0FF"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".NonMemberActivity">

    <TextView
        android:id="@+id/tv_non_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Non-Member"
        android:textColor="#B765A6"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_nonMember"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:popupBackground="#FFF0FF"
        android:textColor="#000"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/tv_houseID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="House Id"
        android:visibility="gone"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edt_visitorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_person"
        android:hint=" Visitor Name"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_arrivingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:hint="Arriving Time"
            android:imeOptions="actionNext"
            style="@android:style/Widget.EditText"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_arrivingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFF0FF"
            android:padding="5dp"
            android:src="@drawable/ic_time" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            style="@android:style/Widget.EditText"
            android:hint="Date"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20sp"

            />

        <ImageButton
            android:id="@+id/btn_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFF0FF"
            android:padding="5dp"
            android:src="@drawable/ic_calendar" />

    </LinearLayout>
    <RadioGroup
        android:id="@+id/visited_RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/isVisited"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Visited"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/isNotVisited"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Not Visited"
            android:textSize="15sp" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/pickup_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pickedUp"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Picked Up"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/notPickedUp"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Not Picked Up"
            android:textSize="15sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/deliver_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/delivered"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Delivered"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/notDelivered"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Not Delivered"
            android:textSize="15sp" />
    </RadioGroup>


    <android.widget.Button
        android:id="@+id/btn_nonMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#B765A6"
        android:padding="10dp"
        android:text="Add Non-Member"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/btn_delete_non_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#B765A6"
        android:padding="10dp"
        android:text="Delete Non-Member"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />


</LinearLayout>