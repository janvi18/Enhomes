<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="Welcome"
            android:textColor="#531455"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="60dp"
            android:text="Create a new account"
            android:textColor="#531455"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_txt"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_uix"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/img_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape" />

            <TextView
                android:id="@+id/tv_logIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="Sign Up"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:hint="First Name"
                android:padding="20dp"
                android:inputType="text"
                android:singleLine="true"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_person"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:hint="Last Name"
                android:singleLine="true"
                android:inputType="text"
                android:padding="20dp"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    style="@android:style/Widget.EditText"
                    android:hint="Date Of birth"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#FFF"
                    android:textSize="20sp"

                    />

                <ImageButton
                    android:id="@+id/btn_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#FFF0FF"
                    android:padding="5dp"
                    android:src="@drawable/ic_calendar" />

            </LinearLayout>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="Age"
                android:inputType="number"
                android:singleLine="true"
                android:padding="20dp"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg">

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edtuix_bg"
                    style="@android:style/Widget.EditText"
                    android:drawablePadding="10dp"
                    android:hint="Gender"
                    android:padding="20dp"
                    android:textColorHint="#fff"
                    android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Male"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Female"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </RadioGroup>

            </LinearLayout>
            <EditText
                android:id="@+id/cn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_person"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="Contact Number"
                android:padding="20dp"
                android:singleLine="true"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_email"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtuix_bg"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:singleLine="true"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColorHint="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:text="Forget Password?"
                android:textColor="#fff"
                android:textSize="20sp" />

            <android.widget.Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forget_pwd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/edt_signup_bg"
                android:paddingHorizontal="100dp"
                android:text="SignUp"
                android:textSize="20sp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_above="@+id/relative"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="-40dp"
            android:src="@drawable/enhomes_logo"
            app:civ_border_color="#b48a96"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="#fff" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/acc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="Already have an account ?"
                android:textColor="#531455"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@id/acc"
                android:singleLine="true"
                android:text=" Login"
                android:textColor="#b48a96"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>