<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF0FF"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".UserActivity">

        <TextView
            android:id="@+id/tv_admin"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Admin"
            android:textColor="#B765A6"
            android:textSize="30sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_admin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" Email"
            android:drawableLeft="@drawable/ic_email"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_admin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" Password"
            android:drawableLeft="@drawable/ic_key"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_roleId"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="20sp" />


        <android.widget.Button
            android:id="@+id/btn_add_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#B765A6"
            android:padding="10dp"
            android:text="Add Admin"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/btn_delete_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#B765A6"
            android:padding="10dp"
            android:text="Delete Admin"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>