<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:scrollHorizontally="true"
    >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingVertical="0dp"
        >

        <TextView
            android:id="@+id/tv_house"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_shape"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_creationDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_shape"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_shape"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_maintenanceAmt"
            android:layout_width="250dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_shape"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_pDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/cell_shape"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_lDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/cell_shape"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_penalty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/cell_shape"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="120dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/img_edit"
                android:background="@drawable/cell_shape"
                android:padding="6dp"
                android:src="@drawable/edit_clr"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/img_delete"
                android:background="@drawable/cell_shape"
                android:padding="6dp"
                android:src="@drawable/del_clr"/>
        </LinearLayout>
    </TableRow>
</TableLayout>